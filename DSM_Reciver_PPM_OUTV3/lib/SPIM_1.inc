; Mask value for global int reg bit for TX instance
SPIM_1_bINT_MASK:             equ 04h
; SPIM interrupt address
SPIM_1_INT_REG:               equ 0e1h

; Do not use, this equate will be removed in a future release
bSPIM_1_INT_MASK:             equ 04h

;--------------------------------------------------
; Register constants and masks
;--------------------------------------------------
SPIM_1_SPIM_MODE_0:             equ   00h      ;MODE 0 - Leading edge latches data - pos clock
SPIM_1_SPIM_MODE_1:             equ   02h      ;MODE 1 - Leading edge latches data - neg clock
SPIM_1_SPIM_MODE_2:             equ   04h      ;MODE 2 - Trailing edge latches data - pos clock
SPIM_1_SPIM_MODE_3:             equ   06h      ;MODE 3 - Trailing edge latches data - neg clock
SPIM_1_SPIM_LSB_FIRST:          equ   80h      ;LSB bit transmitted/received first
SPIM_1_SPIM_MSB_FIRST:          equ   00h      ;MSB bit transmitted/received first

;---------------------------
; SPI Status register masks
;---------------------------
SPIM_1_SPIM_RX_OVERRUN_ERROR:   equ   40h      ;Overrun error in received data
SPIM_1_SPIM_TX_BUFFER_EMPTY:    equ   10h      ;TX Buffer register is ready for next data byte
SPIM_1_SPIM_RX_BUFFER_FULL:     equ   08h      ;RX Buffer register has received current data
SPIM_1_SPIM_SPI_COMPLETE:       equ   20h      ;SPI Tx/Rx cycle has completed

;--------------------------------------------------
; Registers used by SPIM_1
;--------------------------------------------------
SPIM_1_CONTROL_REG: equ 2bh                      ;Control register
SPIM_1_SHIFT_REG:   equ 28h                      ;TX Shift Register register
SPIM_1_TX_BUFFER_REG:   equ 29h                  ;TX Buffer Register
SPIM_1_RX_BUFFER_REG:   equ 2ah                  ;RX Buffer Register
SPIM_1_FUNCTION_REG:    equ 28h                  ;Function register
SPIM_1_INPUT_REG:   equ 29h                      ;Input register
SPIM_1_OUTPUT_REG:  equ 2ah                      ;Output register

