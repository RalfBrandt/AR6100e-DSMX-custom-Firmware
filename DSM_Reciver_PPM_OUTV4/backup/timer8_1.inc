Timer8_1_COMPARE_REG:                  equ 0x2e   ; DR2 CompareValue register
Timer8_1_CONTROL_REG:                  equ 0x2f   ; Control register
Timer8_1_FUNC_REG:                     equ 0x2c   ; Function register
